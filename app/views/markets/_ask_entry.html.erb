<div id="ask_entry" class="panel-body p-0">
  <p class="text-white mt-5">SELL BTC</p>
  <!-- <form class="new_order_ask" id="new_order_ask" action="/markets/usdbch/order_asks" accept-charset="UTF-8" data-remote="true" method="post"><input name="utf8" type="hidden" value="âœ“"> -->
  <%= form_for 'order_ask', url: "/markets/#{market.fetch(:id)}/order_asks", remote: true, html: { class: 'new_order_ask', id: 'new_order_ask' } do |f| %>
    <%= f.hidden_field :ord_type, value: 'limit', name:"order_ask[ord_type]", id:"order_ask_ord_type" %>
    <!-- <input value="limit" type="hidden" name="order_ask[ord_type]" id="order_ask_ord_type"> -->
    <div class="input-group price custom-text">
      <span class="label hint-price-disadvantage"></span>
      <!-- <input class="form-control" type="text" name="order_ask[price]" id="order_ask_price"> -->
      <%= f.text_field :price, class: 'form-control', name:"order_ask[price]", id:"order_ask_price" %>
      <span class="input-group-addon">Amount USD</span>
    </div>
    <div class="input-group amount custom-text">
      <!-- <input class="form-control" type="text" name="order_ask[origin_volume]" id="order_ask_origin_volume"> -->
      <%= f.text_field :origin_volume, class: 'form-control', name:"order_ask[origin_volume]", id:"order_ask_origin_volume" %>
      <span class="input-group-addon">Price BTC</span>
    </div>
    <div class="col-md-12">
      <div class="row">
        <!-- <label class="radio-inline text-white custom-radio">
          <input type="radio" name="optradio" checked>25%
        </label>
        <label class="radio-inline text-white custom-radio">
          <input type="radio" name="optradio">50%
        </label>
        <label class="radio-inline text-white custom-radio">
          <input type="radio" name="optradio">25%
        </label> -->
         <!-- <label class="radio-inline text-white custom-radio">
          <input type="radio" name="optradio">100%
        </label> -->
        <p class="col-md-3 p-0">
          <input type="radio" id="sell_rdo1" name="radio-group" class="custom-rdo">
          <label for="sell_rdo1">25%</label>
        </p>
        <p class="col-md-3 p-0">
          <input type="radio" id="sell_rdo2" name="radio-group" class="custom-rdo">
          <label for="sell_rdo2">50%</label>
        </p>
        <p class="col-md-3 p-0">
          <input type="radio" id="sell_rdo3" name="radio-group" class="custom-rdo">
          <label for="sell_rdo3">25%</label>
        </p>
       
        <p class="col-md-3 p-0">
          <input type="radio" id="sell_rdo4" name="radio-group" class="custom-rdo">
          <label for="sell_rdo4">100%</label>
        </p>
      </div>
    </div>
    <div class="input-group total custom-text">
      <span class="label hint-positions"></span>
      <!-- <input class="form-control" type="text" name="order_ask[total]" id="order_ask_total"> -->
      <%= f.text_field :total, class: 'form-control', name:"order_ask[total]", id:"order_ask_total" %>
      <span class="input-group-addon">Total USD</span>
    </div>
    <%= render partial: 'balance', locals: { currency: market.fetch(:bid_unit).upcase } %>
    <button class="btn buy-btc-btn-pink btn-block text-white" type="submit">Buy BTC
    </button>
  <!-- </form> -->
  <% end%>  
</div>
