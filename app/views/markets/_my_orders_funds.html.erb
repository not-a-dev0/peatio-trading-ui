  <div id="account_summary">
    <div class="my-orders-subheader">
      <ul>
        <li style="width: 50px;">Coin</li>
        <li class="my-orders-subheading" style="width: 200px;">Total Balance</li>
        <li class="my-orders-subheading" style="width: 200px;">Locked Balance</li>
      </ul>
      <div class="total-funds">
        <span id="total_assets" data-title="Summary">R1.00</span>
      </div>
    </div>
