          <tbody>
            <% @funds.first(3).each do |fund| %>
              <tr class="btc ">
                <td class="account-symbol" style="width: 50px;">
                  <div class="currency-logo" style="background-image: url(http://icons.iconarchive.com/icons/cjdowner/cryptocurrency-flat/512/Bitcoin-BTC-icon.png);"></div>
                  <div><%= fund[:currency][:code] %></div>
                </td>
                <td class="account-balance" style="width: 200px; padding-left: 29px;">
                  <span class="amount" data-title="Amount"><%= fund[:amount] %></span>
                </td>
                <td class="account-locked-balance" style="width: 200px; padding-left: 29px;">
                  <span class="locked" data-title="Freeze"><%= fund[:locked] %></span>
                </td>
              </tr>
            <% end %>
            <% @funds.drop(3).each do |fund| %>
              <tr class="btc hide">
